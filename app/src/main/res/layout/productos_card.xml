<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/car_viewProductos"
    android:layout_margin="12sp"
    card_view:cardBackgroundColor="#30475E"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="4dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:textColor="@color/purple_700"
            android:textStyle="bold"
            tools:text="$1500"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/tvNombreSP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="SEARS"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/tvPrice"
            android:layout_toRightOf="@+id/tvPrice"
            android:layout_alignParentTop="true"
            android:textSize="20dp"

            />

        <TextView
            android:id="@+id/tvDescrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Polanco #245"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/tvPrice"
            android:layout_toRightOf="@+id/tvPrice"

            android:textSize="10dp"
            android:layout_below="@+id/tvNombreSP" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>